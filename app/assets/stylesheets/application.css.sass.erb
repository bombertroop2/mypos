@import "bootstrap-sprockets"
@import "chosen.min"
@import "bootstrap-chosen"

.upcase
  text-transform: uppercase

.capitalize
  text-transform: capitalize

.money-fields
  width: 135px !important
  text-align: right

.quantity-fields
  width: 80px !important
  text-align: right

#json-overlay
  //background-color: #333
  opacity: 0.8
  position: fixed
  left: 0px
  top: 0px
  z-index: 10000
  height: 100%
  width: 100%
  overflow: hidden
  background-image: url(<%= image_url("ajax-loader.gif") %>)
  background-position: center
  background-repeat: no-repeat

table.dataTable thead .sorting_asc
  background-image: url(<%= image_url("sort_asc.png") %>)

table.dataTable thead .sorting_desc
  background-image: url(<%= image_url("sort_desc.png") %>)

table.dataTable thead .sorting
  background-image: url(<%= image_url("sort_both.png") %>)
  
.ui-icon,
.ui-widget-content .ui-icon
  background-image: url(<%= asset_path("images/ui-icons_444444_256x240.png") %>)
.ui-widget-header .ui-icon
  background-image: url(<%= asset_path("images/ui-icons_444444_256x240.png") %>)
.ui-state-hover .ui-icon,
.ui-state-focus .ui-icon,
.ui-button:hover .ui-icon,
.ui-button:focus .ui-icon
  background-image: url(<%= asset_path("images/ui-icons_555555_256x240.png") %>)
.ui-state-active .ui-icon,
.ui-button:active .ui-icon
  background-image: url(<%= asset_path("images/ui-icons_ffffff_256x240.png") %>)
.ui-state-highlight .ui-icon,
.ui-button .ui-state-highlight.ui-icon
  background-image: url(<%= asset_path("images/ui-icons_777620_256x240.png") %>)
.ui-state-error .ui-icon,
.ui-state-error-text .ui-icon
  background-image: url(<%= asset_path("images/ui-icons_cc0000_256x240.png") %>)
.ui-button .ui-icon
  background-image: url(<%= asset_path("images/ui-icons_777777_256x240.png") %>)
.smart-listing-controls .btn
  margin-bottom: 0px !important
  margin-right: 0px !important
#search-form-container .btn
  margin-bottom: 0px !important
  margin-right: 0px !important
.dataTables_wrapper .DTTT_container a.DTTT_button
  border: 1px solid #999 !important
  box-shadow: 1px 1px 3px #ccc !important
  -ms-box-shadow: 1px 1px 3px #ccc !important
  -o-box-shadow: 1px 1px 3px #ccc !important
  background: #ffffff !important
  background: -webkit-linear-gradient(top, #ffffff 0%,#f3f3f3 89%,#f9f9f9 100%) !important
  background: linear-gradient(top, #ffffff 0%,#f3f3f3 89%,#f9f9f9 100%) !important
  filter: progid:DXImageTransform.Microsoft.gradient( startColorstr='#ffffff', endColorstr='#f9f9f9',GradientType=0 ) !important
.dataTables_wrapper .DTTT_container a.DTTT_button:active
  box-shadow: inset 1px 1px 3px #999999 !important
.dataTables_wrapper .DTTT_container a.DTTT_button:hover
  border: 1px solid #666 !important
  -ms-box-shadow: 1px 1px 3px #999 !important
  -o-box-shadow: 1px 1px 3px #999 !important
  box-shadow: 1px 1px 3px #999 !important
  background: #f3f3f3 !important
  background: -webkit-linear-gradient(top, #f3f3f3 0%,#e2e2e2 89%,#f4f4f4 100%) !important
  background: linear-gradient(top, #f3f3f3 0%,#e2e2e2 89%,#f4f4f4 100%) !important
  filter: progid:DXImageTransform.Microsoft.gradient( startColorstr='#f3f3f3', endColorstr='#f4f4f4',GradientType=0 ) !important
.dataTables_wrapper .DTTT_container a.DTTT_disabled
  color: #999 !important
  border: 1px solid #d0d0d0 !important
  background: #ffffff !important
  background: -webkit-linear-gradient(top, #ffffff 0%,#f9f9f9 89%,#fafafa 100%) !important
  background: linear-gradient(top, #ffffff 0%,#f9f9f9 89%,#fafafa 100%) !important
  filter: progid:DXImageTransform.Microsoft.gradient( startColorstr='#ffffff', endColorstr='#fafafa',GradientType=0 ) !important



