<td><%= object.code %></td>
<td><%= object.name %></td>
<td><%= remove_empty_space_from_phone_number(object.phone) %></td>
<td><%= remove_empty_space_from_phone_number(object.facsimile) %></td>
<td><%= object.email %></td>
<td class="actions" style="text-align: right">
    <%= link_to "<i class=\"glyphicon glyphicon-share-alt\"></i>".html_safe, vendor_path(object), data: {remote: true}, title: "Show" %>
      <% if user_signed_in? && is_admin? %>
        <%= link_to "<i class=\"glyphicon glyphicon-pencil\"></i>".html_safe, edit_vendor_path(object), data: {remote: true}, class: :edit, title: "Edit" %>
          <%= link_to_if(!object.product_relation.present? && !object.purchase_order_relation.present?, content_tag(:i, "", :class => "glyphicon glyphicon-trash"), object, :remote => true, :class => "destroy", :method => :delete, :data => {:confirmation => 'Are you sure?', placement: :left}, title: "Delete" ) %>
        <% end %>
    </td>
