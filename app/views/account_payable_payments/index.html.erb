<div class="page-header">
    <h1>AP Payments</h1>
</div>

<%= smart_listing_controls_for(:account_payable_payments, {class: "form-inline text-right"}) do %>

    <div class="form-group filter input-append">
        <%= text_field_tag :filter_ap_payment_date, '', class: "search form-control", 
            placeholder: "Payment date", autocomplete: :off, readonly: true %>
      </div>

      <button class="btn btn-primary disabled" type="submit">
          <span class="glyphicon glyphicon-search"></span>
      </button>
    <% end %>
    <%= smart_listing_render(:account_payable_payments) %>
