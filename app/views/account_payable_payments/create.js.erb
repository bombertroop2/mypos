<% if @created %>
  <%= smart_listing_item :account_payable_payments, :create, @account_payable_payment, "account_payable_payments/account_payable_payment" %>
  <% if params[:account_payable_payment][:attr_payment_method].eql?("Giro") %>
    $("#td-app-amount-<%= @account_payable_payment.id %>").html("<%= number_to_currency(@account_payable_payment.reload.amount, :separator => ",", :delimiter => ".", :unit => "Rp", :precision => 2) %>");
  <% end %>
<% else %>
  <% if params[:account_payable_payment][:attr_payment_method].eql?("Cash") %>
    $("#form_ap_payment_container_cash").html("<%= j(render(partial: "form_cash")) %>");
  <% elsif params[:account_payable_payment][:attr_payment_method].eql?("Giro") %>
    $("#form_ap_payment_container_giro").html("<%= j(render(partial: "form_giro")) %>");
  <% else %>
    $("#form_ap_payment_container_transfer").html("<%= j(render(partial: "form_transfer")) %>");
  <% end %>
<% end %>