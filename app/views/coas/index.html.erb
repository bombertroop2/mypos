<div class="page-header">
    <h1>Chart Of Accounts</h1>
</div>

<%= smart_listing_controls_for(:coas, {class: "form-inline text-right"}) do %>

  <div class="form-group filter input-append">
    <%= text_field_tag "q[filter]", '', class: "search form-control",
    placeholder: "Search...", autocomplete: :off %>
  </div>

  <div class="form-group filter input-append">
    <%= select_tag "q[classification]", options_for_select(CLASSIFICATIONS.map{|x| [ x[:name], x[:id]] })%>
  </div>

  <button class="btn btn-primary disabled" type="submit">
      <span class="glyphicon glyphicon-search"></span>
  </button>
<% end %>
<%= smart_listing_render(:coas) %>
