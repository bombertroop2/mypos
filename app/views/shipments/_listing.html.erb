<table class="table table-striped" style="table-layout: fixed;word-wrap: break-word;">
    <thead id="listing-shipment-thead">
        <tr>
            <th class="col-md-4"><%= smart_listing.sortable "DO Number", "delivery_order_number" %></th>
            <th class="col-md-2"><%= smart_listing.sortable "Delivery Date", "delivery_date" %></th>
            <th class="col-md-2"><%= smart_listing.sortable "Received Date", "received_date" %></th>
            <th class="col-md-2"><%= smart_listing.sortable "Quantity", "quantity" %></th>
            <th class="col-md-2"></th>
        </tr>
    </thead>
    <tbody>
        <% smart_listing.collection.each do |shipment| %>
          <tr class="editable" data-id="<%= shipment.id %>">
              <%= smart_listing.render object: shipment, partial: "shipments/shipment", locals: {object: shipment} %>
          </tr>
        <% end %>
        <%= smart_listing.item_new colspan: 5, link: new_shipment_path %>
    </tbody>
</table>
<%= smart_listing.paginate %>
<script>
  var processId = setInterval(function () {
      if ($("#listing-shipment-thead").is(":visible")) {
          clearInterval(processId);
      } else {
          $("#listing-shipment-thead").show();
      }
  }, 0);
  <% if cannot? :manage, Shipment %>
    $('#new-item-btn').css({'opacity': 0.0, 'cursor': 'default'});
    $('#new-item-btn').unbind("click");
    $('#new-item-btn').click(function (e) {
        return false;
    });
<% end %>
</script>