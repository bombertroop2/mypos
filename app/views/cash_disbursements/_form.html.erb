<td colspan="5">
    <div style="padding-top: 20px"></div>
    <%= form_for(@cash_disbursement, remote: true, html: {class: "form-horizontal"}) do |f| %>

        <div class="form-group<%= control_group_error(@cash_disbursement, :description) %>">
            <%= f.label :description, class: "col-sm-2 control-label" %>
              <div class="col-sm-10">
                  <%= f.text_field :description, class: "form-control" %>
                    <%= error_help_text(@cash_disbursement, :description) %>
                </div>

            </div>

            <div class="form-group<%= control_group_error(@cash_disbursement, :price) %>">
                <%= f.label :price, class: "col-sm-2 control-label" %>
                  <div class="col-sm-10">
                      <%= f.text_field :price, class: "form-control", "data-a-sep" => ".", "data-a-dec" => ",", "data-a-sign" => "Rp", style: "text-align:right;" %>
                        <%= error_help_text(@cash_disbursement, :price) %>
                    </div>

                </div>

                <div class="form-group">
                    <div class="col-sm-offset-2 col-sm-10">
                        <%= f.submit "Save", class: "btn btn-primary", id: "btn-save-cash-disbursement" %>
                          <button class="btn btn-link cancel">Cancel</button>
                      </div>
                  </div>
                <% end %>
            </td>
            <script>
              $(function () {
                  $('#cash_disbursement_price').autoNumeric('init');

                  $("#btn-save-cash-disbursement").click(function () {
                      bootbox.confirm({
                          message: "Once you save cash disbursement, you'll not be able to change or delete it</br>Are you sure?",
                          buttons: {
                              confirm: {
                                  label: '<i class="fa fa-check"></i> Confirm'
                              },
                              cancel: {
                                  label: '<i class="fa fa-times"></i> Cancel'
                              }
                          },
                          callback: function (result) {
                              if (result) {
                                  $("body").css('padding-right', '0px');
                                  $("#new_cash_disbursement").submit();
                              }
                          },
                          size: "small"
                      });
                      return false;
                  });
              })
            </script>