<div class="page-header">
    <h1>Cash Disbursements</h1>
</div>

<div id="search-form-container" class="form-inline text-right">
    <div class="form-group">
        <input type="text" class="form-control" readonly="true" id="filter-date" placeholder="Date">
    </div>
    <div class="form-group">
        <%= select_tag "station", options_for_select(CashierOpening::STATIONS), {prompt: "Station", class: "form-control", id: "filter-station"} %>
      </div>
      <div class="form-group">
          <input type="text" id="filter-string" class="form-control" placeholder="Description">
      </div>
      <button id="search-cash-disbursement-btn" type="submit" class="btn btn-primary"><span class="glyphicon glyphicon-search"></span></button>
  </div>

  <div class="hidden">
      <%= smart_listing_controls_for(:cash_disbursements, {class: "form-inline text-right"}) do %>
          <%= text_field_tag :filter_date, '', class: "search form-control", autocomplete: :off %>
            <%= text_field_tag :filter_string, '', class: "search form-control", autocomplete: :off %>
              <%= text_field_tag :filter_station, '', class: "search form-control", autocomplete: :off %>
              <% end %>
          </div>
          <%= smart_listing_render(:cash_disbursements) %>
