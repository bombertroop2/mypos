<% if params[:purchase_return_ids].present? %>
  $("#allocated_return_items_for_dp").html("<%= j(render(partial: "allocated_return_items")) %>");
<% else %>
  <% amount_to_pay = params[:total_amount_received].to_f %>
  $("#allocated_return_items_for_dp").html("");
  $("#amount-to-pay-for-dp").html("<strong><%= number_to_currency(amount_to_pay,
        :separator => ",",
        :delimiter => ".",
        :unit => "Rp",
        :precision => 2) %></strong>");
<% end %>
$("#account_payable_amount_paid_for_dp").val("");
$("#account_payable_debt_for_dp").val("");
$("#account_payable_amount_paid_for_dp").trigger("blur");
$('#account_payable_debt_for_dp').trigger("blur");
