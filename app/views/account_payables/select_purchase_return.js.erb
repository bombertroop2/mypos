<% if params[:purchase_return_ids].present? %>
  $("#allocated_return_items").html("<%= j(render(partial: "allocated_return_items")) %>");
<% else %>
  $("#allocated_return_items").html("");
  <% amount_to_pay = params[:total_amount_received].to_f %>
  $("#amount-to-pay").html("<strong><%= number_to_currency(amount_to_pay,
        :separator => ",",
        :delimiter => ".",
        :unit => "Rp",
        :precision => 2) %></strong>");
<% end %>
$("#account_payable_amount_paid").val("");
$("#account_payable_debt").val("");
$("#account_payable_amount_paid").trigger("blur");
$('#account_payable_debt').trigger("blur");
