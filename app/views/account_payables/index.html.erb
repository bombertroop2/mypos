<div class="page-header">
    <h1>AP Invoices</h1>
</div>

<%= smart_listing_controls_for(:account_payables, {class: "form-inline text-right"}) do %>

    <div class="form-group filter input-append">
        <%= text_field_tag :filter, '', class: "search form-control", 
            placeholder: "Number/Vendor", autocomplete: :off %>
      </div>

      <button class="btn btn-primary disabled" type="submit">
          <span class="glyphicon glyphicon-search"></span>
      </button>
    <% end %>
    <%= smart_listing_render(:account_payables) %>

    <div id="print_ap_invoice_container"></div>