<div class="page-header">
    <h1>Goods Received Not Invoiced List</h1>
</div>

<div id="search-form-container" class="form-inline text-right">
    <div class="form-group">
        <input type="text" id="filter-string-grni" class="form-control" placeholder="Trans/DO/PO number">
    </div>
    <div class="form-group text-left">
        <%= select_tag "vendor_id", options_from_collection_for_select(Vendor.select(:id, :code, :name), :id, "code_and_name"), {include_blank: true, class: "form-control", id: "filter-vendor-grni"} %>
      </div>
      <div class="form-group">
          <input type="text" class="form-control" readonly="true" id="filter-receiving-date-grni" placeholder="Received date" style="width: 200px !important">
      </div>
      <button id="search-grni-btn" type="submit" class="btn btn-primary"><span class="glyphicon glyphicon-search"></span></button>
  </div>

  <div class="hidden">
      <%= smart_listing_controls_for(:receiving_purchase_orders, {class: "form-inline text-right"}) do %>
          <%= text_field_tag :filter_receiving_date_grni, '', class: "search form-control", autocomplete: :off %>
            <%= text_field_tag :filter_string_grni, '', class: "search form-control", autocomplete: :off %>
              <%= text_field_tag :filter_vendor_grni, '', class: "search form-control", autocomplete: :off %>
              <% end %>
          </div>
          <%= smart_listing_render(:receiving_purchase_orders) %>
