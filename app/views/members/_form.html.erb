<td colspan="5">
    <div style="padding-top: 20px"></div>
    <%= form_for(@member, remote: true, html: {class: "form-horizontal"}) do |f| %>
        <div class="form-group<%= control_group_error(@member, :name) %>">
            <%= f.label :name, class: "col-sm-2 control-label" %>
              <div class="col-sm-10">
                  <%= f.text_field :name, class: "form-control" %>
                    <%= error_help_text(@member, :name) %>
                </div>

            </div>

            <div class="form-group<%= control_group_error(@member, :address) %>">
                <%= f.label :address, class: "col-sm-2 control-label" %>
                  <div class="col-sm-10">
                      <%= f.text_area :address, rows: 6, class: "form-control" %>
                        <%= error_help_text(@member, :address) %>
                    </div>
                </div>

                <div class="form-group<%= control_group_error(@member, :phone) %>">
                    <%= f.label :phone, class: "col-sm-2 control-label" %>
                      <div class="col-sm-10">
                          <%= f.telephone_field :phone, class: "form-control", size: 10 %>
                            <%= error_help_text(@member, :phone) %>
                        </div>
                    </div>

                    <div class="form-group<%= control_group_error(@member, :mobile_phone) %>">
                        <%= f.label :mobile_phone, class: "col-sm-2 control-label" %>
                          <div class="col-sm-10">
                              <%= f.telephone_field :mobile_phone, size: 12, class: "form-control" %>
                                <%= error_help_text(@member, :mobile_phone) %>
                            </div>
                        </div>

                        <div class="form-group<%= control_group_error(@member, :gender) %>">
                            <%= f.label :gender, class: "col-sm-2 control-label" %>
                              <div class="col-sm-10">
                                  <%= f.select :gender, options_for_select(SalesPromotionGirl::GENDERS, @member.gender), {include_blank: true}, {class: "form-control"} %>
                                    <%= error_help_text(@member, :gender) %>
                                </div>
                            </div>

                            <div class="form-group<%= control_group_error(@member, :email) %>">
                                <%= f.label :email, class: "col-sm-2 control-label" %>
                                  <div class="col-sm-10">
                                      <%= f.email_field :email, class: "form-control" %>
                                        <%= error_help_text(@member, :email) %>
                                    </div>
                                </div>
                                <div class="form-group<%= control_group_error(@member, :discount) %>">
                                    <%= f.label :discount, "Discount(%)", class: "col-sm-2 control-label" %>
                                      <div class="col-sm-10">
                                          <%= f.text_field :discount, size: 10, class: "form-control quantity-fields" %>
                                            <%= error_help_text(@member, :discount) %>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <%= f.label :member_product_event, class: "col-sm-2 control-label" %>
                                          <div class="col-sm-10" style="margin-top: 5px">
                                              <%= f.check_box :member_product_event %> Active
                                          </div>
                                      </div>
                                      <div class="form-group">
                                          <div class="col-sm-offset-2 col-sm-10">
                                              <%= f.submit "Save", class: "btn btn-primary" %>
                                                <button class="btn btn-link cancel">Cancel</button>
                                            </div>
                                        </div>
                                      <% end %>
                                  </td>

                                  <script>
                                    $(function () {
                                        MaskedInput({
                                            elm: document.getElementById('member_phone'),
                                            format: '____-_______',
                                            separator: '-'
                                        });

                                        MaskedInput({
                                            elm: document.getElementById('member_mobile_phone'),
                                            format: '____________'
                                        });

                                        $("#member_gender").attr("data-placeholder", "Select").chosen();
                                        $("#member_discount").numeric();
                                    });
                                  </script>
