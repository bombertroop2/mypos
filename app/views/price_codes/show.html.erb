<div class="page-header"><h1>Price Code Detail</h1></div>
<div class="form-horizontal">
    <div class="form-group">
        <label class="col-sm-2 control-label">
            Code:
        </label>
        <div class="col-sm-10 form-control hidden-box">
            <%= @price_code.code %>
        </div>
    </div>

    <div class="form-group">
        <label class="col-sm-2 control-label">
            Name:
        </label>
        <div class="col-sm-10 form-control hidden-box">
            <%= @price_code.name %>
        </div>
    </div>

    <div class="form-group">
        <label class="col-sm-2 control-label">
            Description:
        </label>
        <div class="col-sm-10 form-control hidden-box">
            <%= @price_code.description %>
        </div>
    </div>
</div>

<%= link_to 'Edit', edit_price_code_path(@price_code), class: "btn btn-default active" %>
