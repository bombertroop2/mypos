<div class="nested-fields">
    <div class="form-group<%= control_group_error(f.object, :city_id) %>">
        <%= f.label :city_id, class: "col-sm-2 control-label" %>
          <div class="col-sm-10">
              <%= f.select :city_id, options_from_collection_for_select(City.select(:id, :name).order(:name), :id, :name, f.object.city_id.to_s), {include_blank: true}, {class: "form-control courier-price-city-fields"} %>
                <%= error_help_text(f.object, :city_id) %>
            </div>
        </div>

        <div class="form-group<%= control_group_error(f.object, :effective_date) %>">
            <%= f.label :effective_date, class: "col-sm-2 control-label" %>
              <div class="col-sm-10">
                  <%= f.text_field :effective_date, readonly: true, class: "form-control courier-price-effective-date-fields" %>
                    <%= error_help_text(f.object, :effective_date) %>
                </div>
            </div>

            <div class="form-group<%= control_group_error(f.object, :price_type) %>">
                <%= f.label :price_type, class: "col-sm-2 control-label" %>
                  <div class="col-sm-10">
                      <%= f.select :price_type, options_for_select(CourierPrice::PRICE_TYPES, f.object.price_type), {include_blank: true}, {class: "form-control courier-price-price-type-fields"} %>
                        <%= error_help_text(f.object, :price_type) %>
                    </div>
                </div>

                <div class="form-group<%= control_group_error(f.object, :price) %>">
                    <%= f.label :price, class: "col-sm-2 control-label" %>
                      <div class="col-sm-10">
                          <%= f.text_field :price, class: "form-control money-fields", "data-a-sep" => ".",
                              "data-a-dec" => ",", "data-a-sign" => "Rp" %>
                            <%= error_help_text(f.object, :price) %>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-sm-2"></div>
                        <div class="col-sm-10">
                            <%= link_to_remove_association "remove", f %>
                        </div>
                    </div>
                </div>

                <script>
                  $(function () {
                      $(".courier-price-city-fields").attr("data-placeholder", "Please select").chosen("destroy").chosen();
                      $(".courier-price-price-type-fields").attr("data-placeholder", "Please select").chosen("destroy").chosen();
                      $(".courier-price-effective-date-fields").datepicker("destroy");
                      $(".courier-price-effective-date-fields").datepicker({
                          dateFormat: "dd/mm/yy"
                      });
                      $('.money-fields').autoNumeric('init');
                  })
                </script>