<p id="notice"><%= notice %></p>

<h1>Listing Size Groups</h1>

<table>
  <thead>
    <tr>
      <th>Code</th>
      <th>Description</th>
      <th>Sizes</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @size_groups.each do |size_group| %>
      <tr>
        <td><%= size_group.code %></td>
        <td><%= size_group.description %></td>
        <td><%= size_group.sizes.pluck(:size).sort.join(", ") %></td>
        <td><%= link_to 'Show', size_group %></td>
        <td><%= link_to 'Edit', edit_size_group_path(size_group) %></td>
        <td><%= link_to 'Destroy', size_group, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

