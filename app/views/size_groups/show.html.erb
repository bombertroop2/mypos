<div class="page-header"><h1>Size Group Detail</h1></div>
<div class="form-horizontal">
    <div class="form-group">
        <label class="col-sm-2 control-label">
            Code:
        </label>
        <div class="col-sm-10 form-control hidden-box">
            <%= @size_group.code %>
        </div>
    </div>

    <div class="form-group">
        <label class="col-sm-2 control-label">
            Description:
        </label>
        <div class="col-sm-10 form-control hidden-box">
            <%= @size_group.description %>
        </div>
    </div>

    <div class="form-group">
        <label class="col-sm-2 control-label">
            Sizes:
        </label>
        <div class="col-sm-10 form-control hidden-box">
            <%= @size_group.sizes.pluck(:size).sort.join(", ") %>
        </div>
    </div>
</div>
<%= link_to 'Edit', edit_size_group_path(@size_group), class: "btn btn-default active" %>
