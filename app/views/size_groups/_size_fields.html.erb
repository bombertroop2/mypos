<div class="nested-fields">
    <div class="form-group<%= control_group_error(f.object, :size) %>">
        <%= f.label :size, class: "col-sm-2 control-label" %>
          <div class="col-sm-10">
              <%= f.text_field :size, class: "form-control" %>
                <%= error_help_text(f.object, :size) %>
            </div>
        </div>

        <div class="form-group<%= control_group_error(f.object, :size_order) %>">
            <%= f.label :size_order, "Order", class: "col-sm-2 control-label" %>
              <div class="col-sm-10">
                  <%= f.text_field :size_order, class: "form-control", type: :number %>
                    <%= error_help_text(f.object, :size_order) %>
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-2"></div>
                <div class="col-sm-10">
                    <%= link_to_remove_association "remove", f %>
                </div>
            </div>
        </div>
