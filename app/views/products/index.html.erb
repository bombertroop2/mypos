<p id="notice"><%= notice %></p>

<h1>Listing Products</h1>

<table>
    <thead>
        <tr>
            <th>Code</th>
            <th>Brand</th>
            <th>Sex</th>
            <th>Vendor</th>
            <th>Target</th>
            <th>Model</th>
            <th>Goods type</th>
            <th colspan="3"></th>
        </tr>
    </thead>

    <tbody>
        <% @products.each do |product| %>
          <tr>
              <td><%= product.code %></td>
              <td><%= product.brand.name if product.brand %></td>
              <td><%= product.sex.titleize %></td>
              <td><%= product.vendor.name if product.vendor %></td>
              <td><%= product.target.titleize %></td>
              <td><%= product.model.name if product.model %></td>
              <td><%= product.goods_type.name if product.goods_type %></td>
              <td><%= link_to 'Show', product %></td>
              <td><%= link_to 'Edit', edit_product_path(product) %></td>
              <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
    </tbody>
</table>

