<div class="page-header"><h1>Listing Products</h1></div>

<table class="table table-condensed table-responsive table-striped">
    <thead>
        <tr>
            <th>Code</th>
            <th>Brand</th>
            <th>Sex</th>
            <th>Vendor</th>
            <th>Target</th>
            <th>Model</th>
            <th>Goods type</th>
            <th></th>
        </tr>
    </thead>

    <tbody>
        <% @products.each do |product| %>
          <tr>
              <td><%= product.code %></td>
              <td><%= product.brand.name if product.brand %></td>
              <td><%= product.sex.titleize %></td>
              <td><%= product.vendor.name if product.vendor %></td>
              <td><%= product.target.titleize %></td>
              <td><%= product.model.name if product.model %></td>
              <td><%= product.goods_type.name if product.goods_type %></td>
              <td>
                  <%= link_to 'Show', product, class: "btn btn-info btn-xs active" %>
                    <%= link_to 'Edit', edit_product_path(product), class: "btn btn-warning btn-xs active" %>
                      <%= link_to 'Delete', product, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-xs active" %>
                    </td>
                </tr>
              <% end %>
          </tbody>
      </table>

      <%= link_to 'New Product', new_product_path, class: "btn btn-default active" %>
