<td><%= "#{object.code} - #{object.name}" rescue "" %></td>
<td><%= number_to_currency(object.cost, :separator => ",", :delimiter => ".", :unit => "Rp", :precision => 2) rescue "" %></td>
<td><%= object.effective_date.strftime("%d/%m/%Y") rescue "" %></td>
<td class="actions" style="text-align: right">
<%#= link_to "<i class=\"glyphicon glyphicon-usd\"></i>".html_safe, "javascript:showListingCosts('#{object.id}')", title: "Costs" %>
    <%= link_to "<i class=\"glyphicon glyphicon-share-alt\"></i>".html_safe, cost_price_path(object), data: {remote: true}, title: "Show" rescue "" %>
<%# if user_signed_in? && is_admin? %>
<%#= link_to "<i class=\"glyphicon glyphicon-pencil\"></i>".html_safe, edit_product_path(object), data: {remote: true}, class: :edit, title: "Edit" %>
<%#= link_to_if(!object.purchase_order_relation.present? && !object.direct_purchase_product_relation.present?, content_tag(:i, "", :class => "glyphicon glyphicon-trash"), object, :remote => true, :class => "destroy", :method => :delete, :data => {:confirmation => 'Are you sure?', placement: :left}, title: "Delete" ) %>
<%# end %>
</td>
