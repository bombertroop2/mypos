<div class="page-header">
    <h1>Cashiers</h1>
</div>

<div id="search-form-container" class="form-inline text-right">
    <div class="form-group">
        <input type="text" class="form-control" readonly="true" id="filter-opened-at" placeholder="Opened at">
    </div>
    <div class="form-group">
        <%= select_tag "station", options_for_select(CashierOpening::STATIONS), {prompt: "Station", class: "form-control", id: "filter-station"} %>
      </div>
      <div class="form-group">
          <%= select_tag "shift", options_for_select(CashierOpening::SHIFTS), {prompt: "Shift", class: "form-control", id: "filter-shift"} %>
        </div>
        <button id="search-cashier-opening-btn" type="submit" class="btn btn-primary"><span class="glyphicon glyphicon-search"></span></button>
    </div>

    <div class="hidden">
        <%= smart_listing_controls_for(:cashiers, {class: "form-inline text-right"}) do %>
            <%= text_field_tag :filter_opened_at, '', class: "search form-control", autocomplete: :off %>
              <%= text_field_tag :filter_shift, '', class: "search form-control", autocomplete: :off %>
                <%= text_field_tag :filter_station, '', class: "search form-control", autocomplete: :off %>
                <% end %>
            </div>
            <%= smart_listing_render(:cashiers) %>
