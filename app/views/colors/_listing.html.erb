<% unless smart_listing.empty? %>
  <table class="table table-striped" style="table-layout: fixed;word-wrap: break-word;">
      <thead>
          <tr>
              <th class="col-md-3"><%= smart_listing.sortable "Code", "code" %></th>
              <th class="col-md-3"><%= smart_listing.sortable "Name", "name" %></th>
              <th class="col-md-5"><%= smart_listing.sortable "Description", "description" %></th>
              <th class="col-md-1"></th>
          </tr>
      </thead>
      <tbody>
          <% smart_listing.collection.each do |color| %>
            <tr class="editable" data-id="<%= color.id %>">
                <%= smart_listing.render object: color, partial: "colors/color", locals: {object: color} %>
            </tr>
          <% end %>
          <% if user_signed_in? && is_admin? %>
            <%= smart_listing.item_new colspan: 4, link: new_color_path %>
          <% end %>
      </tbody>
  </table>
  <%= smart_listing.paginate %>
<% else %>
  <p class="warning">No records!</p>
<% end %>