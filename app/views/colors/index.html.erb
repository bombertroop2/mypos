<div class="page-header"><h1>Listing Colors</h1></div>

<table class="table table-condensed table-responsive table-striped">
    <thead>
        <tr>
            <th>Code</th>
            <th>Name</th>
            <th></th>
        </tr>
    </thead>

    <tbody>
        <% @colors.each do |color| %>
          <tr>
              <td><%= color.code %></td>
              <td><%= color.name %></td>
              <td>
                  <%= link_to 'Show', color, class: "btn btn-info btn-xs active" %>
                    <%= link_to 'Edit', edit_color_path(color), class: "btn btn-warning btn-xs active" %>
                      <%= link_to 'Destroy', color, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-xs active" %>
                    </td>
                </tr>
              <% end %>
          </tbody>
      </table>


      <%= link_to 'New Color', new_color_path, class: "btn btn-default active" %>
