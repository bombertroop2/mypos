<table class="table table-striped table-bordered" style="padding-bottom: 1px; word-wrap: break-word">
    <thead>
      <th>Date</th>
      <th>Description</th>
      <th>Debit</th>
      <th>Kredit</th>
    </thead>
    <tbody>
      <% @general_ledgers.each do |gl| %>
        <tr>
          <td><%= gl.transaction_date %></td>
          <td><%= gl.name %></td>
          <td>
            <%= number_to_currency(gl.total, :separator => ",", :delimiter => ".", :unit => "Rp", :precision => 2) %>
          </td>
          <td>
            <%= number_to_currency(gl.total, :separator => ",", :delimiter => ".", :unit => "Rp", :precision => 2) %>
          </td>
        </tr>
      <% end %>
    </tbody>
</table>
