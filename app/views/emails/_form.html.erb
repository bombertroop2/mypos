<td colspan="3">
    <div style="padding-top: 20px"></div>
    <%= form_for(@email, remote: true, html: {class: "form-horizontal"}) do |f| %>


        <div class="form-group<%= control_group_error(@email, :address) %>">
            <%= f.label :address, class: "col-sm-2 control-label" %>
              <div class="col-sm-10">
                  <%= f.email_field :address, class: "form-control inputs", tabindex: "1" %>
                    <%= error_help_text(@email, :address) %>
                </div>
            </div>
            <div class="form-group<%= control_group_error(@email, :email_type) %>">
                <%= f.label :type, class: "col-sm-2 control-label" %>
                  <div class="col-sm-10">
                      <%= f.select :email_type, options_for_select(Email::TYPES, @email.email_type), {prompt: true}, {tabindex: "2", class: "form-control"} %>
                        <%= error_help_text(@email, :email_type) %>
                    </div>
                </div>


                <div class="form-group">
                    <div class="col-sm-offset-2 col-sm-10">
                        <%= f.submit "Save", class: "btn btn-primary" %>
                          <button class="btn btn-link cancel">Cancel</button>
                      </div>
                  </div>

                <% end %>
            </td>
