        <ul>
            <% @supervisor.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
        </ul>
    </div>
  <% end %>

  <div class="field">
      <%= f.label :code %><br>
      <%= f.text_field :code, class: "upcase inputs", tabindex: "1" %>
