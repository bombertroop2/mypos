        <%= f.label :name %><br>
        <%= f.text_field :name, class: "capitalize inputs", tabindex: "2" %>
      </div>
      <div class="field">
          <%= f.label :address %><br>
          <%= f.text_area :address, rows: 6, tabindex: "3" %>
      </div>
      <div class="field">
          <%= f.label :email %><br>
          <%= f.email_field :email, class: "inputs", tabindex: "4" %>
      </div>
      <div class="field">
          <%= f.label :phone %><br>
          <%= f.telephone_field :phone, class: "inputs", tabindex: "5", size: 10 %>
      </div>
      <div class="field">
          <%= f.label :mobile_phone %><br>
          <%= f.telephone_field :mobile_phone, tabindex: "6", size: 12 %>
      </div>
      <div class="actions">
          <%= f.submit %>
      </div>
    <% end %>
