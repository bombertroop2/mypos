$("#accounts_receivable_invoice_attr_vat_value").val("<%= number_to_currency(@vat, :separator => ",", :delimiter => ".", :unit => "Rp", :precision => 2) %>");
$("#accounts_receivable_invoice_attr_net_amount").val("<%= number_to_currency(@net_amt, :separator => ",", :delimiter => ".", :unit => "Rp", :precision => 2) %>");
