<div class="page-header">
    <h1>Overdue Invoice List (Direct Sales)</h1>
</div>

<div id="search-form-container" class="form-inline text-right">
    <div class="form-group">
        <input type="text" class="form-control" id="filter-ar-invoice-number" placeholder="Number/DO Number">
    </div>
    <div class="form-group">
        <input type="text" class="form-control" readonly="true" id="filter-ar-invoice-due-date" placeholder="Due date">
    </div>
    <div class="form-group text-left">
        <%= select_tag "customer_id", options_from_collection_for_select(Customer.select(:id, :code, :name), :id, "code_and_name"), {include_blank: true, class: "form-control", id: "filter-ar-invoice-customer-id"} %>
      </div>
      <button id="search-ar-invoice-btn" type="submit" class="btn btn-primary"><span class="glyphicon glyphicon-search"></span></button>
  </div>

  <div class="hidden">
      <%= smart_listing_controls_for(:accounts_receivable_invoices, {class: "form-inline text-right"}) do %>
          <%= text_field_tag :filter_ar_invoice_number, '', class: "search form-control", autocomplete: :off %>
            <%= text_field_tag :filter_ar_invoice_due_date, '', class: "search form-control", autocomplete: :off %>
              <%= text_field_tag :filter_ar_invoice_customer_id, '', class: "search form-control", autocomplete: :off %>
              <% end %>
          </div>

          <%= smart_listing_render(:accounts_receivable_invoices) %>
          <div id="print_ar_invoice_ds_container"></div>