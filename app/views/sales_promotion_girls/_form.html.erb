<td colspan="6">
    <div style="padding-top: 20px"></div>
    <%= form_for(@sales_promotion_girl, remote: true, html: {class: "form-horizontal"}) do |f| %>
        <div class="form-group<%= control_group_error(@sales_promotion_girl, :name) %>">
            <%= f.label :name, class: "col-sm-2 control-label" %>
              <div class="col-sm-10">
                  <%= f.text_field :name, class: "form-control capitalize inputs", tabindex: "1" %>
                    <%= error_help_text(@sales_promotion_girl, :name) %>
                </div>
            </div>
            <div class="form-group<%= control_group_error(@sales_promotion_girl, :address) %>">
                <%= f.label :address, class: "col-sm-2 control-label" %>
                  <div class="col-sm-10">
                      <%= f.text_area :address, rows: 6, tabindex: "2", class: "form-control" %>
                        <%= error_help_text(@sales_promotion_girl, :address) %>
                    </div>
                </div>
                <div class="form-group<%= control_group_error(@sales_promotion_girl, :gender) %>">
                    <%= f.label :gender, class: "col-sm-2 control-label" %>
                      <div class="col-sm-10">
                          <%= f.select :gender, options_for_select(SalesPromotionGirl::GENDERS, @sales_promotion_girl.gender), {prompt: true}, {tabindex: "3", class: "inputs form-control"} %>
                            <%= error_help_text(@sales_promotion_girl, :gender) %>
                        </div>
                    </div>
                    <div class="form-group<%= control_group_error(@sales_promotion_girl, :phone) %>">
                        <%= f.label :phone, class: "col-sm-2 control-label" %>
                          <div class="col-sm-10">
                              <%= f.telephone_field :phone, size: 10, class: "form-control inputs", tabindex: "4" %>
                                <%= error_help_text(@sales_promotion_girl, :phone) %>
                            </div>
                        </div>
                        <div class="form-group<%= control_group_error(@sales_promotion_girl, :mobile_phone) %>">
                            <%= f.label :mobile_phone, class: "col-sm-2 control-label" %>
                              <div class="col-sm-10">
                                  <%= f.telephone_field :mobile_phone, size: 12, class: "form-control inputs", tabindex: "5" %>
                                    <%= error_help_text(@sales_promotion_girl, :mobile_phone) %>
                                </div>
                            </div>
                            <div class="form-group<%= control_group_error(@sales_promotion_girl, :province) %>">
                                <%= f.label :province, class: "col-sm-2 control-label" %>
                                  <div class="col-sm-10">
                                      <%= f.text_field :province, class: "form-control inputs", tabindex: "6" %>
                                        <%= error_help_text(@sales_promotion_girl, :province) %>
                                    </div>
                                </div>
                                <div class="form-group<%= control_group_error(@sales_promotion_girl, :warehouse_id) %>">
                                    <%= f.label :warehouse_id, class: "col-sm-2 control-label" %>
                                      <div class="col-sm-10">
                                          <%= f.select :warehouse_id, options_from_collection_for_select(Warehouse.select(:id, :code).where("warehouse_type <> 'central'"), :id, :code, @sales_promotion_girl.warehouse_id.to_s), {prompt: true}, {tabindex: "7", class: "inputs form-control"} %>
                                            <%= error_help_text(@sales_promotion_girl, :warehouse_id) %>
                                        </div>
                                    </div>

                                    <div class="form-group<%= control_group_error(@sales_promotion_girl, :role) %>">
                                        <%= f.label :role, class: "col-sm-2 control-label" %>
                                          <div class="col-sm-10">
                                              <%= f.select :role, options_for_select(user_roles, @sales_promotion_girl.role), {prompt: true}, {tabindex: "8", class: "inputs form-control", disabled: (is_user_cant_change_role? rescue false) } %>
                                                <%= error_help_text(@sales_promotion_girl, :role) %>
                                            </div>
                                        </div>
<!--
                                        <div id="user_auth">
                                            <%#= f.fields_for :user do |builder| %>
                                              <%#= render "user_fields", :f => builder %>
                                            <%# end %>
                                        </div>-->

                                        <div class="form-group">
                                            <div class="col-sm-offset-2 col-sm-10">
                                                <%= f.submit "Save", tabindex: "11", class: "btn btn-primary" %>
                                                  <button class="btn btn-link cancel">Cancel</button>
                                              </div>
                                          </div>
                                        <% end %>
                                    </td>

                                    <script>
                                      $(function () {
                                          MaskedInput({
                                              elm: document.getElementById('sales_promotion_girl_phone'),
                                              format: '____-_______',
                                              separator: '-'
                                          });
                                          MaskedInput({
                                              elm: document.getElementById('sales_promotion_girl_mobile_phone'),
                                              format: '____________'
                                          });
