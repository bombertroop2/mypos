<div class="page-header"><h1>Listing Sales Promotion Girls</h1></div>

<table class="table table-condensed table-responsive table-striped">
    <thead>
        <tr>
            <th>Identifier</th>
            <th>Name</th>
            <th>Phone</th>
            <th>Warehouse</th>
            <th>Mobile phone</th>
            <th colspan="3"></th>
        </tr>
    </thead>

    <tbody>
        <% @sales_promotion_girls.each do |sales_promotion_girl| %>
          <tr>
              <td><%= sales_promotion_girl.identifier %></td>
              <td><%= sales_promotion_girl.name %></td>
              <td><%= remove_empty_space_from_phone_number(sales_promotion_girl.phone) %></td>
              <td><%= sales_promotion_girl.warehouse.code if sales_promotion_girl.warehouse %></td>
              <td><%= remove_empty_space_from_phone_number(sales_promotion_girl.mobile_phone) %></td>
              <td>
                  <%= link_to 'Show', sales_promotion_girl, class: "btn btn-info btn-xs active" %>
                    <%= link_to 'Edit', edit_sales_promotion_girl_path(sales_promotion_girl), class: "btn btn-warning btn-xs active" %>
                      <%= link_to 'Delete', sales_promotion_girl, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-xs active" %>
                    </td>
                </tr>
              <% end %>
          </tbody>
      </table>

      <%= link_to 'New Sales promotion girl', new_sales_promotion_girl_path, class: "btn btn-default active" %>
