<div class="page-header"><h1>Sales Promotion Girl Detail</h1></div>
<div class="form-horizontal">
    <div class="form-group">
        <label class="col-sm-2 control-label">
            Identifier:
        </label>
        <div class="col-sm-10 form-control hidden-box">
            <%= @sales_promotion_girl.identifier %>
        </div>
    </div>

    <div class="form-group">
        <label class="col-sm-2 control-label">
            Name:
        </label>
        <div class="col-sm-10 form-control hidden-box">
            <%= @sales_promotion_girl.name %>
        </div>
    </div>

    <div class="form-group">
        <label class="col-sm-2 control-label">
            Address:
        </label>
        <div class="col-sm-10 form-control hidden-box">
            <%= @sales_promotion_girl.address %>
        </div>
    </div>

    <div class="form-group">
        <label class="col-sm-2 control-label">
            Gender:
        </label>
        <div class="col-sm-10 form-control hidden-box">
            <%= @sales_promotion_girl.gender.capitalize %>
        </div>
    </div>

    <div class="form-group">
        <label class="col-sm-2 control-label">
            Phone:
        </label>
        <div class="col-sm-10 form-control hidden-box">
            <%= remove_empty_space_from_phone_number(@sales_promotion_girl.phone) %>
        </div>
    </div>


    <div class="form-group">
        <label class="col-sm-2 control-label">
            Province:
        </label>
        <div class="col-sm-10 form-control hidden-box">
            <%= @sales_promotion_girl.province %>
        </div>
    </div>

    <div class="form-group">
        <label class="col-sm-2 control-label">
            Warehouse:
        </label>
        <div class="col-sm-10 form-control hidden-box">
            <%= @sales_promotion_girl.warehouse_code %>
        </div>
    </div>


    <div class="form-group">
        <label class="col-sm-2 control-label">
            Mobile phone:
        </label>
        <div class="col-sm-10 form-control hidden-box">
            <%= remove_empty_space_from_phone_number(@sales_promotion_girl.mobile_phone) %>
        </div>
    </div>
    
    <div class="form-group">
        <label class="col-sm-2 control-label">
            Role:
        </label>
        <div class="col-sm-10 form-control hidden-box">
            <%= @sales_promotion_girl.role %>
        </div>
    </div>

</div>
<%= link_to 'Edit', edit_sales_promotion_girl_path(@sales_promotion_girl), class: "btn btn-default active" %>
