<td><%= object.code %></td>
<td><%= object.name %></td>
<td><%= object.description %></td>
<td class="actions" style="text-align: right">
    <%= link_to_if(can?(:manage, GoodsType), content_tag(:i, "", :class => "glyphicon glyphicon-pencil"), edit_goods_type_path(object), :remote => true, class: :edit, method: :get, title: "Edit" ) %>
      <%= link_to_if(can?(:manage, GoodsType) && !object.product_relation.present?, content_tag(:i, "", :class => "glyphicon glyphicon-trash"), object, :remote => true, :class => "destroy", :method => :delete, :data => {:confirmation => 'Are you sure that you want to permanently delete the selected item?', placement: :left}, title: "Delete" ) %>
  </td>
