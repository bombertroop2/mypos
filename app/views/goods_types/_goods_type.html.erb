<td><%= object.code %></td>
<td><%= object.name %></td>
<td><%= object.description %></td>
<td class="actions" style="text-align: right">
    <% if user_signed_in? && is_admin? %>
      <%= link_to "<i class=\"glyphicon glyphicon-pencil\"></i>".html_safe, edit_goods_type_path(object), data: {remote: true}, class: :edit, title: "Edit" %>
        <%= link_to_if(!object.product_relation.present?, content_tag(:i, "", :class => "glyphicon glyphicon-trash"), object, :remote => true, :class => "destroy", :method => :delete, :data => {:confirmation => 'Are you sure?', placement: :left}, title: "Delete" ) %>
      <% end %>
  </td>
