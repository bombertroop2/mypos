<div class="page-header"><h1>Listing Goods Types</h1></div>

<table class="table table-condensed table-responsive table-striped">
    <thead>
        <tr>
            <th>Code</th>
            <th>Name</th>
            <th></th>
        </tr>
    </thead>

    <tbody>
        <% @goods_types.each do |goods_type| %>
          <tr>
              <td><%= goods_type.code %></td>
              <td><%= goods_type.name %></td>
              <td>
                  <%= link_to 'Show', goods_type, class: "btn btn-info btn-xs active" %>
                    <%= link_to 'Edit', edit_goods_type_path(goods_type), class: "btn btn-warning btn-xs active" %>
                      <%= link_to 'Destroy', goods_type, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-xs active" %>
                    </td>
                </tr>
              <% end %>
          </tbody>
      </table>


      <%= link_to 'New Goods type', new_goods_type_path, class: "btn btn-default active" %>
