<div class="page-header"><h1>Listing Goods Types</h1></div>

<%= smart_listing_controls_for(:goods_types, {class: "form-inline text-right"}) do %>

    <div class="form-group filter input-append">
        <%= text_field_tag :filter, '', class: "search form-control", 
            placeholder: "Search...", autocomplete: :off %>
      </div>

      <button class="btn btn-primary disabled" type="submit">
          <span class="glyphicon glyphicon-search"></span>
      </button>
    <% end %>
    <%= smart_listing_render(:goods_types) %>
