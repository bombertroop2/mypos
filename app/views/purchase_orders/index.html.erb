<h1>Listing Purchase Orders</h1>

<table>
  <thead>
    <tr>
      <th>Number</th>
      <th>Po type</th>
      <th>Status</th>
      <th>Vendor</th>
      <th>Request delivery date</th>
      <th>Order value</th>
      <th>Receiving value</th>
      <th>Means of payment</th>
      <th>Warehouse</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @purchase_orders.each do |purchase_order| %>
      <tr>
        <td><%= purchase_order.number %></td>
        <td><%= purchase_order.po_type %></td>
        <td><%= purchase_order.status %></td>
        <td><%= purchase_order.vendor %></td>
        <td><%= purchase_order.request_delivery_date %></td>
        <td><%= purchase_order.order_value %></td>
        <td><%= purchase_order.receiving_value %></td>
        <td><%= "#{purchase_order.vendor.terms_of_payment} day(s)" if purchase_order.vendor %></td>
        <td><%= purchase_order.warehouse %></td>
        <td><%= link_to 'Show', purchase_order %></td>
        <td><%= link_to 'Edit', edit_purchase_order_path(purchase_order) %></td>
        <td><%= link_to 'Destroy', purchase_order, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

