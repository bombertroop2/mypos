<% if @valid %>
  <%= smart_listing_item :purchase_orders, :create, @purchase_order, "purchase_orders/purchase_order" %>
    bootbox.alert({message: "Purchase Order <%= @purchase_order.number %> has been successfully created", size: "small"});
    $(".new-item-placeholder").html("");
<% else %>
  <%= smart_listing_item :purchase_orders, :create, @purchase_order, "purchase_orders/form" %>
<% end %>

<% if @valid && @vendor_name.present? %>
  $("#vendor-name-<%= @purchase_order.id %>").html("<%= @vendor_name %>");
<% end %>