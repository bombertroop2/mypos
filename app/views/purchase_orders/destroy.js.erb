<% if @purchase_order.destroyed? %>
  <%= smart_listing_item :purchase_orders, :destroy, @purchase_order %>
<% else %>
  <% if @purchase_order.errors.present? && @purchase_order.errors.messages[:base].present? %>
    bootbox.alert({message: "<%= @purchase_order.errors.messages[:base].join("<br/>") %>",size: 'small'});
  <% end %>
<% end %>
