<table border="1">
    <tr>
        <td>
            <table>
                <tr>
                    <th align="center">PURCHASE ORDER</th>
                </tr>
                <tr>
                    <td align="center"><%= @purchase_order.number %></td>
                </tr>
                <tr>
                    <td>
                        <table>
                            <tr>
                                <td>To</td>
                                <td>:</td>
                                <td><%= @purchase_order.vendor.name if @purchase_order.vendor %></td>
                            </tr>
                            <tr>
                                <td>Created Date</td>
                                <td>:</td>
                                <td><%= @purchase_order.created_at.strftime("%d/%m/%Y") %></td>
                            </tr>
                            <tr>
                                <td>Delivery Date</td>
                                <td>:</td>
                                <td><%= @purchase_order.request_delivery_date.strftime("%d/%m/%Y") if @purchase_order.request_delivery_date.present? %></td>
                            </tr>
                        </table>
                    </td>
                </tr>
                <tr>
                    <td align="center">
                        <table border="1">
                            <tbody>
                                <tr>
                                    <th>No</th>
                                    <th>Warehouse Name</th>
                                    <th>Article Code</th>
                                    <th>Quantity</th>
                                    <th>Total Quantity</th>
                                    <th>Unit Cost</th>
                                    <th>Total Cost</th>
                                </tr>
                                <% @purchase_order.purchase_order_products.each_with_index do |po_product, idx| %>
                                  <tr align="center">
                                      <td><%= idx.succ %></td>
                                      <td><%= po_product.warehouse.name if po_product.warehouse %></td>
                                      <td><%= po_product.product.code if po_product.product %></td>
                                      <td>
                                          <table border="1" width="100%">
                                              <tbody>
                                                  <tr>
                                                      <td colspan="2" rowspan="2"></td>
                                                      <td align="center" colspan="<%= po_product.sizes.length %>">Sizes</td>
                                                  </tr>
                                                  <tr>
                                                      <% po_product.sizes.each do |size| %>
                                                        <td align="center"><%= size.size %></td>
                                                      <% end %>
                                                  </tr>
                                                  <% po_product.colors.each_with_index do |color, idx| %>
                                                    <tr>
                                                        <% if idx == 0 %>
                                                          <td valign="middle" rowspan="<%= po_product.colors.length %>">Colors</td>
                                                        <% end %>
                                                        <td align="center"><%= color.code %></td>
                                                        <% po_product.sizes.each do |size| %>
                                                          <% po_detail = po_product.purchase_order_details.select{ |pod| pod.color.eql?(color) && pod.size.eql?(size) }.first %>
                                                          <td>
                                                              <% if po_detail %>
                                                                <%= po_detail.quantity %>
                                                              <% end %>
                                                          </td>
                                                        <% end %>
                                                    </tr>
                                                  <% end %>
                                              </tbody>
                                          </table>
                                      </td>
                                      <td align="right"><%= po_product.total_quantity %></td>
                                      <td align="right">
                                          <%= number_to_currency(po_product.product.cost,
                                            :separator => ",",
                                            :delimiter => ".",
                                            :unit => "Rp",
                                            :precision => 2) %>
                                      </td>
                                      <td align="right">
                                          <%= number_to_currency(po_product.total_cost,
                                            :separator => ",",
                                            :delimiter => ".",
                                            :unit => "Rp",
                                            :precision => 2) %>
                                      </td>
                                  </tr>
                                <% end %>

                            </tbody>
                        </table>
                    </td>
                </tr>
            </table>
        </td>
    </tr>
</table>

<br />

<%= link_to 'Receive', receive_purchase_order_path(@purchase_order) %> |
<%= link_to 'Edit', edit_purchase_order_path(@purchase_order) %> |
<%= link_to 'Back', purchase_orders_path %>
