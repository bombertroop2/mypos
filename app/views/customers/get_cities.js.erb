$('#customer_city_id').find('option').remove();
var o = new Option("", "");
$("#customer_city_id").append(o);
<% @cities.each do |city| %>
  var o = new Option("<%= city.name %>", "<%= city.id %>");
  $("#customer_city_id").append(o);
<% end %>
$("#customer_city_id").attr("data-placeholder", "Please select").chosen("destroy").chosen();
