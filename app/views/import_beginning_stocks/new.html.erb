<div class="row">
    <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">
            <div class="x_title">
                <h2>Beginning Stock<small>import</small></h2>
                <div class="clearfix"></div>
            </div>
            <div class="x_content">
                <%= form_tag(import_beginning_stocks_create_path, remote: true, class: "form-horizontal", id: "import_beginning_stocks_form") do %>
                    <div class="form-group">
                        <%= label_tag :import_date, "Import date", class: "col-sm-2 control-label" %>
                          <div class="col-sm-10">
                              <%= text_field_tag "import_date", "", readonly: true, class: "form-control" %>
                            </div>
                        </div>
                        <div class="form-group">
                            <%= label_tag :excel_file, "Excel file", class: "col-sm-2 control-label" %>
                              <div class="col-sm-10">
                                  <%= file_field_tag :file, class: "form-control", style: "padding-left: 0px;border: 0;box-shadow: none;width: auto" %>
                                </div>
                            </div>
                            <div class="ln_solid"></div>
                            <%= submit_tag "Import", style: "float: right", class: "btn btn-primary" %>
                            <% end %>
                        </div>
                    </div>
                </div>
            </div>