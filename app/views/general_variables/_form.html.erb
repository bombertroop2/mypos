<div class="row">
    <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">
            <div class="x_title">
                <h2>General Variable<small><%= @general_variable.new_record? ? "new items" : "edit items" %></small></h2>
                <div class="clearfix"></div>
            </div>
            <div class="x_content">
                <%= form_for(@general_variable, html: {class: "form-horizontal"}) do |f| %>

                    <div class="form-group<%= control_group_error(@general_variable, :pieces_per_koli) %>">
                        <%= f.label :pieces_per_koli, class: "col-sm-2 control-label" %>
                          <div class="col-sm-10">
                              <%= f.number_field :pieces_per_koli, class: "form-control" %>
                                <%= error_help_text(@general_variable, :pieces_per_koli) %>
                            </div>
                        </div>
                        <div class="ln_solid"></div>
                        <%= f.submit "Save", class: "btn btn-primary", style: "float: right" %>

                        <% end %>
                    </div>
                </div>
            </div>
        </div>

