<div class="page-header">
    <h1>Banks</h1>
</div>

<div id="search-form-container" class="form-inline text-right">
    <div class="form-group">
        <%= select_tag "type", options_for_select(Bank::TYPES), {prompt: "Type", class: "form-control", id: "filter-type"} %>
      </div>
      <div class="form-group">
          <input type="text" id="filter-string" class="form-control" placeholder="Code/Name">
      </div>
      <button id="search-bank-btn" type="submit" class="btn btn-primary"><span class="glyphicon glyphicon-search"></span></button>
  </div>

  <div class="hidden">
      <%= smart_listing_controls_for(:banks, {class: "form-inline text-right"}) do %>
          <%= text_field_tag :filter_type, '', class: "search form-control", autocomplete: :off %>
            <%= text_field_tag :filter_string, '', class: "search form-control", autocomplete: :off %>
            <% end %>
        </div>
        <%= smart_listing_render(:banks) %>
