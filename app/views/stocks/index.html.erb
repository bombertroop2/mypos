<div class="page-header"><h1>Stock Balance</h1></div>

<div class="row">
    <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">
            <div class="x_title">
                <h2>Show Stocks</h2>
                <div class="clearfix"></div>
            </div>
            <div class="x_content">
                <br>
                <div class="form-horizontal">

                    <% if @warehouses.present? %>
                      <div class="form-group">
                          <label for="warehouse" class="control-label col-sm-2">Warehouse <span class="required">*</span></label>
                          <div class="col-sm-10">
                              <%= select_tag "warehouse_id", options_from_collection_for_select(@warehouses, :id, "code_and_name"), {include_blank: true, class: "form-control col-md-7 col-xs-12 chosen-select"} %>
                            </div>
                        </div>
                      <% end %>
                      <div class="form-group">
                          <label for="product_filter_mode" class="control-label col-sm-2">Search</label>
                          <div class="col-sm-10" style="margin-top: -6px">
                              <div class="radio">
                                  <label class="radio-inline"><%= radio_button_tag :product_filter_mode, "All", checked: true %> All</label>
                                  <label class="radio-inline"><%= radio_button_tag :product_filter_mode, "Filter" %> Filter</label>
                              </div>
                          </div>
                      </div>
                      <div class="form-group">
                          <label for="product_criteria" class="control-label col-sm-2"></label>
                          <div class="col-sm-10">
                              <%= text_field_tag :product_criteria, '', class: "form-control col-md-7 col-xs-12", placeholder: "Product code/name/desc", readonly: true, style: "cursor: not-allowed" %>
                            </div>
                        </div>
                        <div class="ln_solid"></div>
                        <!--                        <div class="form-group">
                                                    <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3">-->
                        <button type="submit" class="btn btn-success" id="search-stock-btn" style="float: right">Show</button>
                        <!--                            </div>
                                                </div>-->

                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="hidden">
        <%= smart_listing_controls_for(:stocks, {class: "form-inline text-right"}) do %>
            <% if @warehouses.present? %>
              <%= text_field_tag :filter_warehouse_id, '', class: "search form-control", autocomplete: :off %>
              <% end %>
              <%= text_field_tag :filter_product_criteria, '', class: "search form-control", autocomplete: :off %>
              <% end %>
          </div>
          <%= smart_listing_render(:stocks) %>
