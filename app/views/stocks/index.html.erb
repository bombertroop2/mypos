<div class="page-header"><h1>Listing stocks</h1></div>

<table class="table table-condensed table-responsive table-striped">
    <tr>
        <td rowspan="2" style="text-align: center; vertical-align: middle"><strong>PO Number</strong></td>
        <td rowspan="2" style="text-align: center; vertical-align: middle"><strong>Warehouse Code</strong></td>
        <td colspan="3" style="text-align: center;"><strong>Product</strong></td>
        <td rowspan="2" style="text-align: center; vertical-align: middle"><strong>Type</strong></td>
        <td rowspan="2" style="text-align: center; vertical-align: middle"><strong>Quantity</strong></td>
        <td rowspan="2" style="text-align: center; vertical-align: middle"><strong>Arrived at</strong></td>
    </tr>
    <tr>
        <td style="text-align: center;"><strong>Code</strong></td>
        <td style="text-align: center;"><strong>Color</strong></td>
        <td style="text-align: center;"><strong>Size</strong></td>
    </tr>

    <% @stocks.each do |stock| %>
      <tr>
          <td><%= stock.po_number %></td>
          <td><%= stock.warehouse_code %></td>
          <td><%= stock.product_code %></td>
          <td><%= stock.product_color %></td>
          <td><%= stock.product_size %></td>
          <td><%= stock.stock_type %></td>
          <td><%= stock.quantity_on_hand %> pcs</td>
          <td><%= stock.created_at.strftime("%d/%m/%Y") %></td>
      </tr>
    <% end %>
</table>



