<% unless @valid %>
  <% if params[:event][:event_type].strip.eql?("Discount(%)") %>
    $("#form_container_disc_percentage").html("<%= j(render(partial: "form_discount_percentage")) %>");
  <% elsif params[:event][:event_type].strip.eql?("Discount(Rp)") %>
    $("#form_container_discount_cash").html("<%= j(render(partial: "form_discount_cash")) %>");
  <% elsif params[:event][:event_type].strip.eql?("Special Price") %>
    $("#form_container_special_price").html("<%= j(render(partial: "form_special_price")) %>");
  <% elsif params[:event][:event_type].strip.eql?("Buy 1 Get 1 Free") %>
    $("#form_container_buy_one_get_one_free").html("<%= j(render(partial: "form_buy_one_get_one")) %>");
  <% elsif params[:event][:event_type].strip.eql?("Gift") %>
    $("#form_container_reward").html("<%= j(render(partial: "form_gift")) %>");
  <% end %>
<% else %>
  window.location = '<%= events_path %>';
<% end %>
