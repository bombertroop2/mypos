                                    <div class="x_content">                        

                                        <div>
                                            <!-- Nav tabs -->
                                            <ul class="nav nav-tabs" role="tablist">
                                                <!--<li role="presentation" class="active"><a href="#add_general_products_by_bgm_special_price" aria-controls="add_general_products_by_bgm_special_price" role="tab" data-toggle="tab">Add products by brand/goods type/model</a></li>-->
                                                <li role="presentation" class="active"><a href="#add_general_products_by_code_special_price" aria-controls="add_general_products_by_code_special_price" role="tab" data-toggle="tab">Add products by code</a></li>
                                            </ul>

                                            <!-- Tab panes -->
                                            <div class="tab-content">
