<div class="page-header">
    <h1>Sales Returns</h1>
</div>

<div id="search-form-container" class="form-inline text-right">
    <div class="form-group">
        <input type="text" id="filter-string" class="form-control" placeholder="Return/Receipt number">
    </div>
    <div class="form-group">
        <input type="text" class="form-control" readonly="true" id="filter-sales-return-date" placeholder="Date">
    </div>
    <button id="search-sales-return-btn" type="submit" class="btn btn-primary"><span class="glyphicon glyphicon-search"></span></button>
</div>

<div class="hidden">
    <%= smart_listing_controls_for(:sales_returns, {class: "form-inline text-right"}) do %>
        <%= text_field_tag :filter_date, '', class: "search form-control", autocomplete: :off %>
          <%= text_field_tag :filter_string, '', class: "search form-control", autocomplete: :off %>
          <% end %>
      </div>
      <%= smart_listing_render(:sales_returns) %>
      <div id="receipt-container"></div>
