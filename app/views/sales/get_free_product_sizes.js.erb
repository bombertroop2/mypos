<% if @product_sizes.present? %>
  $("#sale_product_bogo_size_field_container_<%= params[:product_row_index] %>").html("<%= j(render(partial: "sale_bogo_product_sizes_field", locals: {product_barcode_id: params[:product_barcode_id], product_sizes: @product_sizes, product_code: params[:sale_bogo_product_code], product_color: params[:sale_bogo_product_color], product_row_index: params[:product_row_index]})) %>");
  $("#modal_form_btn_add_bogo_product_<%= params[:product_row_index] %>").removeClass("hidden");
<% else %>
  $("#sale_product_bogo_size_field_container_<%= params[:product_row_index] %>").html("");
  $("#modal_form_btn_add_bogo_product_<%= params[:product_row_index] %>").addClass("hidden");
  bootbox.alert({message: "No sizes found",size: 'small'});
<% end %>