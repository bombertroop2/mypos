<div class="page-header">
    <h1>Listing Brands</h1>
</div>

<table class="table table-condensed table-responsive table-striped">
    <thead>
        <tr>
            <th>Code</th>
            <th>Name</th>
            <th></th>
        </tr>
    </thead>

    <tbody>
        <% @brands.each do |brand| %>
          <tr>
              <td><%= brand.code %></td>
              <td><%= brand.name %></td>
              <td><%= link_to 'Show', brand, class: "btn btn-info btn-xs active" %>
                    <%= link_to 'Edit', edit_brand_path(brand), class: "btn btn-warning btn-xs active" %>
                      <%= link_to 'Destroy', brand, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-xs active" %></td>
                </tr>
              <% end %>
          </tbody>
      </table>

      <br>

      <%= link_to 'New Brand', new_brand_path, class: "btn btn-default active" %>
