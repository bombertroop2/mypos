<td colspan="4">
    <div style="padding-top: 20px"></div>
    <%= form_for(@brand, remote: true, html: {class: "form-horizontal"}) do |f| %>
        <div class="form-group<%= control_group_error(@brand, :code) %>">
            <%= f.label :code, class: "col-sm-2 control-label" %>
              <div class="col-sm-10">
                  <%= f.text_field :code, class: "form-control upcase inputs", tabindex: "1", size: 4, maxlength: 4 %>
                    <%= error_help_text(@brand, :code) %>
                </div>

            </div>
            <div class="form-group<%= control_group_error(@brand, :name) %>">
                <%= f.label :name, class: "col-sm-2 control-label" %>
                  <div class="col-sm-10">
                      <%= f.text_field :name, class: "form-control inputs", tabindex: "2" %>
                        <%= error_help_text(@brand, :name) %>
                    </div>
                </div>
                <div class="form-group">
                    <%= f.label :description, class: "col-sm-2 control-label" %>
                      <div class="col-sm-10">
                          <%= f.text_area :description, rows: 6, tabindex: "3", class: "form-control" %>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-sm-offset-2 col-sm-10">
                            <%= f.submit "Save", class: "btn btn-primary" %>
                              <button class="btn btn-link cancel">Cancel</button>
                          </div>
                      </div>
                    <% end %>
                </td>

                <script>
                  $(function () {
                      $('#brand_code').keypress(function (e) {
                          var key = e.which;
                          if (key == 13)  // the enter key code
                          {
                              $("#brand_name").focus();
                              return false;
                          }
                      });
                      $('#brand_name').keypress(function (e) {
                          var key = e.which;
                          if (key == 13)  // the enter key code
                          {
                              $("#brand_description").focus();
                              return false;
                          }
                      });
                  });
                </script>