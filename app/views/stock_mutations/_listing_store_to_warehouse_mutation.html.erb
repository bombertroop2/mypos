<table class="table table-striped" style="table-layout: fixed;word-wrap: break-word;">
    <thead id="listing-stock-mutation-thead">
        <tr>
            <th class="col-md-4"><%= smart_listing.sortable "Number", "number" %></th>
            <th class="col-md-2"><%= smart_listing.sortable "Delivery Date", "delivery_date" %></th>
            <th class="col-md-2"><%= smart_listing.sortable "Received Date", "received_date" %></th>
            <th class="col-md-1"><%= smart_listing.sortable "Qty", "quantity" %></th>
            <th class="col-md-2"><%= smart_listing.sortable "Courier Cost", "courier_cost" %></th>
            <th class="col-md-1"></th>
        </tr>
    </thead>
    <tbody>
        <% smart_listing.collection.each do |stock_mutation| %>
          <tr class="editable" data-id="<%= stock_mutation.id %>">
              <%= smart_listing.render object: stock_mutation, partial: "stock_mutations/stock_mutation", locals: {object: stock_mutation} %>
          </tr>
        <% end %>
        <%= smart_listing.item_new colspan: 6, link: new_store_to_warehouse_mutation_stock_mutations_path %>
    </tbody>
</table>
<%= smart_listing.paginate %>
<script>
  var processId = setInterval(function () {
      if ($("#listing-stock-mutation-thead").is(":visible")) {
          clearInterval(processId);
      } else {
          $("#listing-stock-mutation-thead").show();
      }
  }, 0);
</script>