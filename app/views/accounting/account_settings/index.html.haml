.page-header
  %h1 #{@model.model_name.human}
= smart_listing_controls_for(:settings, {class: "form-inline text-right"}) do
  .form-group.filter.input-append
    = text_field_tag "q[filter]", '', class: "search form-control", |
      placeholder: "Search...", autocomplete: :off                  |

  %button.btn.btn-primary.disabled{:type => "submit"}
    %span.glyphicon.glyphicon-search
= smart_listing_render(:settings)
