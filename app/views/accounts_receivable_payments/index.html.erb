<div class="page-header">
    <h1>AR Payments (Direct Sales)</h1>
</div>

<div id="search-form-container" class="form-inline text-right">
    <div class="form-group">
        <input type="text" class="form-control" id="filter-ar-payment-number" placeholder="Number">
    </div>
    <div class="form-group text-left">
        <%= select_tag "customer_id", options_from_collection_for_select(Customer.select(:id, :code, :name), :id, "code_and_name"), {include_blank: true, class: "form-control", id: "filter-ar-payment-customer-id"} %>
      </div>
      <div class="form-group">
          <input type="text" class="form-control" readonly="true" id="filter-ar-payment-date" placeholder="Payment date">
      </div>
      <div class="form-group text-left">
          <%= select_tag "payment_method", options_for_select(AccountsReceivablePayment::PAYMENT_METHODS), {include_blank: true, class: "form-control", id: "filter-ar-payment-method"} %>
        </div>
        <button id="search-ar-payment-btn" type="submit" class="btn btn-primary"><span class="glyphicon glyphicon-search"></span></button>
    </div>

    <div class="hidden">
        <%= smart_listing_controls_for(:accounts_receivable_payments, {class: "form-inline text-right"}) do %>
            <%= text_field_tag :filter_ar_payment_number, '', class: "search form-control", autocomplete: :off %>
              <%= text_field_tag :filter_ar_payment_customer_id, '', class: "search form-control", autocomplete: :off %>
                <%= text_field_tag :filter_ar_payment_date, '', class: "search form-control", autocomplete: :off %>
                  <%= text_field_tag :filter_ar_payment_method, '', class: "search form-control", autocomplete: :off %>
                  <% end %>
              </div>

              <%= smart_listing_render(:accounts_receivable_payments) %>
              <div id="print_ar_payment_container"></div>