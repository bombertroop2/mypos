<p id="notice"><%= notice %></p>

<h1>Listing Purchase Returns</h1>

<table>
    <thead>
        <tr>
            <th>Number</th>
            <th>Vendor</th>
            <th></th>
        </tr>
    </thead>

    <tbody>
        <% @purchase_returns.each do |purchase_return| %>
          <tr>
              <td><%= purchase_return.number %></td>
              <td><%= purchase_return.purchase_order.vendor.name %></td>
              <td><%= link_to 'Show', purchase_return %></td>
          </tr>
        <% end %>
    </tbody>
</table>

<br>

