<div class="page-header"><h1>Listing Regions</h1></div>

<table class="table table-condensed table-responsive table-striped">
    <thead>
        <tr>
            <th>Code</th>
            <th>Name</th>
            <th></th>
        </tr>
    </thead>

    <tbody>
        <% @regions.each do |region| %>
          <tr>
              <td><%= region.code %></td>
              <td><%= region.name %></td>
              <td>
                  <%= link_to 'Show', region, class: "btn btn-info btn-xs active" %>
                  <%= link_to 'Edit', edit_region_path(region), class: "btn btn-warning btn-xs active" %>
                  <%= link_to 'Destroy', region, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-xs active" %>
              </td>
          </tr>
        <% end %>
    </tbody>
</table>


<%= link_to 'New Region', new_region_path, class: "btn btn-default active" %>
